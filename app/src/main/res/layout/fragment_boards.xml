<android.support.v4.widget.SwipeRefreshLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/refresh_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="ch.gianulli.flashcards.BoardsFragment">

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<include
				android:id="@+id/trello_not_accessible"
				layout="@layout/trello_not_accessible"
				android:visibility="gone"
				android:padding="16dp"/>

		<FrameLayout
				android:id="@+id/no_boards"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"
				android:padding="16dp">

			<TextView
					android:drawableTop="@drawable/ic_warning_grey600_144dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="16dp"
					android:layout_gravity="center_vertical"
					android:gravity="center"
					android:textColor="?android:textColorSecondary"
					android:text="@string/you_have_no_boards"
					android:textSize="14sp"/>

		</FrameLayout>

		<ProgressBar
				android:id="@+id/progress_indicator"
				style="?android:attr/progressBarStyleLarge"
				android:layout_width="36dp"
				android:layout_height="36dp"
				android:layout_gravity="center"
				android:indeterminate="true"/>

		<android.support.v7.widget.RecyclerView
				android:id="@+id/recycler_view"
				android:scrollbars="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"/>
	</FrameLayout>

</android.support.v4.widget.SwipeRefreshLayout>
